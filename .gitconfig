[user]
	name = jurgen.kluft
	email = jurgen.kluft@gmail.com
[core]
  editor = code --wait --new-window
[diff]
  tool = vscode
  colorMoved = default
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[credential]
	helper = osxkeychain
